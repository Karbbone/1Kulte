{
  "name": "1kulte",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "bunx nest build",
    "format": "bunx prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "bunx nest start",
    "start:dev": "bunx nest start --watch",
    "start:debug": "bunx nest start --debug --watch",
    "start:prod": "bun dist/main",
    "lint": "bunx eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "bunx jest",
    "test:watch": "bunx jest --watch",
    "test:cov": "bunx jest --coverage",
    "test:debug": "bun --inspect-brk node_modules/.bin/jest --runInBand",
    "test:e2e": "bunx jest --config ./test/jest-e2e.json",
    "migration:generate": "bunx typeorm-ts-node-commonjs migration:generate -d src/data/datasource.ts",
    "migration:create": "bunx typeorm-ts-node-commonjs migration:create",
    "migration:run": "bunx typeorm-ts-node-commonjs migration:run -d src/data/datasource.ts",
    "migration:revert": "bunx typeorm-ts-node-commonjs migration:revert -d src/data/datasource.ts",
    "migration:run:prod": "NODE_ENV=production bunx typeorm migration:run -d dist/data/datasource.js"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/typeorm": "^11.0.0",
    "@types/multer": "^2.0.0",
    "@types/qrcode": "^1.5.6",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dotenv": "^17.2.3",
    "minio": "^8.0.6",
    "mysql2": "^3.15.3",
    "qrcode": "^1.5.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/$1"
    }
  }
}
